{
  "compilerOptions": {
    "module": "es2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src/types",
    "allowJs": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    },
    "lib": [
      "es2021",
      "dom"
    ],
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*"
  ]
}
